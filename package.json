{
    "name": "markless",
    "displayName": "markless",
    "description": "Markless language syntax highlighting",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "markless",
            "aliases": ["Markless", "markless"],
            "extensions": [".mess"],
            "configuration": "./language-configuration.json"
        },{
            "id": "speechless",
            "aliases": ["Speechless", "speechless"],
            "extensions": [".spess"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "markless",
            "scopeName": "source.markless",
            "path": "./syntaxes/markless.tmLanguage.json"
        },{
            "language": "speechless",
            "scopeName": "source.speechless",
            "path": "./syntaxes/speechless.tmLanguage.json"
        }],
        "configurationDefaults": {
            "editor.insertSpaces": false,
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {"scope": "meta.emote.speechless",
                     "settings": {"foreground": "#33ff33"}},
                    {"scope": "punctuation.definition.conditional.body.speechless",
                     "settings": {"foreground": "#555555"}},
                    {"scope": "punctuation.definition.conditional.speechless",
                     "settings": {"foreground": "#555555"}},
                    {"scope": "punctuation.definition.placeholder.speechless",
                     "settings": {"foreground": "#555555"}},
                    {"scope": "punctuation.definition.jump.speechless",
                     "settings": {"foreground": "#cc0000"}},
                    {"scope": "punctuation.definition.label.speechless",
                     "settings": {"foreground": "#cc0000"}},
                    {"scope": "meta.expression.speechless",
                     "settings": {"foreground": "#cc0000"}},
                    
                    {"scope": "markup.raw.instruction.markless",
                     "settings": {"foreground": "#cc0000"}},
                    {"scope": "meta.embed.markless",
                     "settings": {"foreground": "#3333ff"}},
                    {"scope": "markup.other.source.markless",
                     "settings": {"foreground": "#ff8800"}},
                    {"scope": "punctuation.definition.quote.begin.markless",
                     "settings": {"foreground": "#555555"}},
                    {"scope": "punctuation.definition.list.begin.markless",
                     "settings": {"foreground": "#555555"}},
                    {"scope": "punctuation.definition.code_block.markless",
                     "settings": {"foreground": "#555555"}},
                    {"scope": "punctuation.definition.compound.markless",
                     "settings": {"foreground": "#555555"}},
                    {"scope": "markup.raw.inline.markless",
                     "settings": {"foreground": "#555555"}},
                    {"scope": "markup.other.footnote.markless",
                     "settings": {"foreground": "#888888"}},
                    {"scope": "variable.other.footnote.markless",
                     "settings": {"foreground": "#888888"}},
                    {"scope": "variable.language.newline.markless",
                     "settings": {"foreground": "#888888"}},
                    {"scope": "variable.language.dash.em.markless",
                     "settings": {"foreground": "#888888"}},
                    {"scope": "variable.language.dash.en.markless",
                     "settings": {"foreground": "#888888"}}
                ]
            }
        }
    }
}
